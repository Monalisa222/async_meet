<!-- Add Member Modal -->
<div id="memberModal"
     class="fixed inset-0 hidden z-50">

  <!-- Background Overlay -->
  <div class="absolute inset-0 bg-black/40"
       onclick="closeMemberModal()"></div>

  <!-- Modal Container -->
  <div class="relative flex items-center justify-center min-h-screen p-4">

    <div class="relative bg-white rounded-xl shadow-lg w-full max-w-md p-6">

      <h2 class="text-lg font-semibold mb-4 text-gray-900">
        Add Member
      </h2>

      <%= form_with url: "#",
              method: :post,
              id: "memberForm",
              local: true,
              data: { turbo: false },
              html: { novalidate: false },
              class: "space-y-4" do %>

        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

        <div>
          <%= email_field_tag :email, nil,
                placeholder: "Enter user email",
                required: true,
                class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 text-sm" %>
        </div>

        <div class="flex justify-end space-x-2">
          <button type="button"
                  onclick="closeMemberModal()"
                  class="px-4 py-2 text-sm text-gray-600 hover:text-gray-900">
            Cancel
          </button>

          <button type="submit"
                  class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg text-sm">
            Add Member
          </button>
        </div>

      <% end %>

    </div>
  </div>
</div>
