<h1 class="text-2xl font-semibold mb-6">Create Organization</h1>

<%= form_with model: @organization, class: "space-y-5" do |form| %>

  <div>
    <%= form.label :name, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :name,
          class: "mt-1 w-full px-3 py-2 border border-gray-300 rounded-lg
                  focus:ring-2 focus:ring-blue-500" %>
  </div>

  <div>
    <%= form.label :description, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_area :description,
          class: "mt-1 w-full px-3 py-2 border border-gray-300 rounded-lg
                  focus:ring-2 focus:ring-blue-500" %>
  </div>

  <div>
    <%= form.label :industry, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :industry,
          class: "mt-1 w-full px-3 py-2 border border-gray-300 rounded-lg
                  focus:ring-2 focus:ring-blue-500" %>
  </div>

  <div>
    <%= form.label :website, class: "block text-sm font-medium text-gray-700" %>
    <%= form.url_field :website,
          class: "mt-1 w-full px-3 py-2 border border-gray-300 rounded-lg
                  focus:ring-2 focus:ring-blue-500" %>
  </div>

  <div>
    <%= form.submit "Create Organization",
          class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg" %>
  </div>

<% end %>
