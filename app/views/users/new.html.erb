<h2 class="text-2xl font-semibold text-center text-gray-900 mb-6">
  Create Your Account
</h2>

<%= form_with model: @user, url: register_path, class: "space-y-5" do |form| %>

  <div>
    <%= form.label :email, class: "block text-sm font-medium text-gray-700" %>
    <%= form.email_field :email,
          required: true,
          class: "mt-1 w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm
                  focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <div>
    <%= form.label :password, class: "block text-sm font-medium text-gray-700" %>
    <%= form.password_field :password,
          required: true,
          class: "mt-1 w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm
                  focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <div>
    <%= form.label :password_confirmation, class: "block text-sm font-medium text-gray-700" %>
    <%= form.password_field :password_confirmation,
          required: true,
          class: "mt-1 w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm
                  focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <div>
    <%= form.submit "Create Account",
          class: "w-full bg-blue-600 hover:bg-blue-700 text-white py-2.5 rounded-lg
                  transition duration-150" %>
  </div>

<% end %>
